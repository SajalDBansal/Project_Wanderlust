<!-- Adding boilerpatecode -->
<%= layout("/layouts/boilerplate.ejs")%>

<div class="row mt-3">
  <div class="col-6 offset-3">
    <h3>Login on Wanderlust</h3>

    <form
      action="/login"
      method="post"
      class="mt-3 needs-validation"
      novalidate
    >
      <div class="mb-3">
        <label for="username" class="form-label">Username : </label>
        <input
          type="text"
          id="username"
          name="username"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Field should not be empty.</div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password : </label>
        <input
          type="password"
          id="password"
          name="password"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter your password.</div>
      </div>

      <button class="btn btn-dark">Login</button>
    </form>
  </div>
</div>
