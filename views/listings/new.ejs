<%= layout("/layouts/boilerplate.ejs")%>

<!-- New page to show a form to add a new listing in the database -->

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>

    <br />

    <form
      action="/listings"
      method="post"
      class="mt-3 needs-validation"
      novalidate
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title : </label>

        <input
          type="text"
          name="listing[title]"
          id="title"
          placeholder="Enter title"
          class="form-control"
          required
        />

        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description : </label>

        <textarea
          name="listing[description]"
          id="description"
          placeholder="Enter Description"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">
          Provide a description of the property
        </div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image : </label>

        <input
          type="text"
          name="listing[image]"
          id="image"
          placeholder="Enter Image URL / LINK"
          class="form-control"
        />
      </div>

      <div class="row">
        <div class="mb-3 col-md-5">
          <label for="price" class="form-label">Price : </label>

          <input
            name="listing[price]"
            id="price"
            placeholder="Enter Prices"
            class="form-control"
            required
          />

          <div class="invalid-feedback">Enter a valid price</div>
        </div>

        <div class="mb-3 col-md-7">
          <label for="country" class="form-label">Country : </label>

          <input
            type="text"
            name="listing[country]"
            id="country"
            placeholder="Enter Country"
            class="form-control"
            required
          />

          <div class="invalid-feedback">Enter valid location</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location : </label>

        <input
          type="text"
          name="listing[location]"
          id="location"
          placeholder="Enter Location"
          class="form-control"
          required
        />

        <div class="invalid-feedback">Please enter country name</div>
      </div>

      <button class="btn btn-dark mb-3 form-btn">Add</button>
    </form>
  </div>
</div>
